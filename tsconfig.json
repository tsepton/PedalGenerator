{
    "compilerOptions": {
      "module": "ES6",
      "target": "es5",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": ".",
      "strictPropertyInitialization": true,
      "strictNullChecks": true
    },
    "include": ["src"]
  }